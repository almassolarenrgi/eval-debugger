{
	"inherit": "vshaxe-node",
	"haxelibs": [
		{
			"name": "vscode-debugadapter",
			"installArgs": ["git", "vscode-debugadapter", "https://github.com/vshaxe/vscode-debugadapter-extern"]
		}
	],
	"targets": [
		{
			"name": "eval-debugger",
			"installCommands": [
				["npm", "install"]
			],
			"afterBuildCommands": [
				["npx", "webpack", "--mode", "production", "--silent"]
			],
			"args": {
				"classPaths": [
					"src"
				],
				"haxelibs": [
					"vscode-debugadapter"
				],
				"output": {
					"path": "bin/adapter.js",
					"target": "js"
				},
				"main": "Main"
			}
		}
	]
}